<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chrono_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_chrono_stoped"
    tools:context=".ui.chrono.ContractionFragment">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format="%s"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="60sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chrono_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chronometer"
        android:layout_centerHorizontal="true"
        app:icon="@drawable/ic_baseline_play_arrow_24"
        android:text="@string/start"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/average_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chrono_button"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Interval moy :" />

        <TextView
            android:id="@+id/average_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="07s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DurÃ©e moy :" />

        <TextView
            android:id="@+id/average_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="07s" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/chrono_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/average_data"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_interval" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_duration" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chrono_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chrono_header"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
