<RelativeLayout android:id="@+id/chrono_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_chrono_stoped"
                tools:context="fr.frogdevelopment.pregnancycalendar.contraction.ContractionFragment">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format="%s"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/chrono_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chronometer"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_start"
        android:text="@string/start"
        android:textSize="40sp"/>

    <LinearLayout
        android:id="@+id/chrono_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chrono_button"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_date"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_interval"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chrono_header_duration"/>

    </LinearLayout>

    <ListView
        android:id="@+id/chrono_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/chrono_header"/>

</RelativeLayout>
