<RelativeLayout android:id="@+id/chrono_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_chrono_stoped"
                tools:context="fr.frogdevelopment.pregnancycalendar.contraction.ContractionFragment">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format="%s"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/chrono_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chronometer"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_start"
        android:text="@string/start"
        android:textSize="40sp"/>

    <ListView
        android:id="@+id/chrono_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/chrono_button"/>

</RelativeLayout>
